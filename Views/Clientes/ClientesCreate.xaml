<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jal_crud.Views.Clientes.ClientesCreate"
             Title="CLIENTES - Create">
    <VerticalStackLayout>
        <VerticalStackLayout Margin="30,2" VerticalOptions="CenterAndExpand">                        
            <Entry Placeholder="Nombres" Text="{Binding Path=Nombres, Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
            <Entry Placeholder="Apellidos" Text="{Binding Path=Apellidos, Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
            <Entry Placeholder="Direccion" Text="{Binding Path=Direccion, Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
            <Entry Placeholder="Telefono" Text="{Binding Path=Telefono, Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
            <Button Text="Guardar" Margin="0, 40" Command="{Binding SaveCommand}" BackgroundColor="Green"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>