<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jal_crud.Views.TipoFacturas.TipoFacturasCreate"
             Title="TIPO DE FACTURA - Create">
    <VerticalStackLayout>
        <VerticalStackLayout Margin="30,2" VerticalOptions="CenterAndExpand">
            <Label Text="NUEVO TIPO DE FACTURA" FontSize="Large" HorizontalTextAlignment="Center" Margin="0, 40"/>
            <Entry x:Name="TipoFactura_Entry"  Placeholder="Tipo de Factura" Text="{Binding Path=TipoFactura, Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
            <Button Text="Guardar" Margin="0, 40" Command="{Binding SaveCommand}" BackgroundColor="Green" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>